# ===========================================
# CORE SETTINGS (Required for basic functionality)
# ===========================================

# MeiliSearch configuration (Required for search functionality)
MEILISEARCH_URL=http://localhost:7700
# MEILISEARCH_MASTER_KEY=your_master_key_if_needed

# Application settings
DEBUG=True
LOG_LEVEL=INFO

# Demo mode (limits processing to save resources)
DEMO_MODE=True

# ===========================================
# OPTIONAL API KEYS (Will use open-source alternatives if not provided)
# ===========================================

# Transcription: Will use Whisper (free) if not provided
# DEEPGRAM_API_KEY=your_deepgram_api_key_here

# LLM: Will use local open-source models if not provided
# HUGGINGFACE_TOKEN=your_huggingface_token_here

# Database: Only needed for advanced semantic similarity features
# DATABASE_URL=postgresql://user:password@localhost:5432/podcast_db

# External APIs: Only needed for product information lookup
# PERPLEXITY_API_KEY=your_perplexity_api_key
# EXA_API_KEY=your_exa_api_key

# ===========================================
# ADVANCED SETTINGS
# ===========================================

# Whisper model size (tiny, base, small, medium, large)
# Larger models are more accurate but slower
WHISPER_MODEL=base